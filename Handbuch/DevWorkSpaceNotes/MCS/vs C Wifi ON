    if (iw_get_basic_config(sock, "wlan0", &wc) == 0) {
        printf("Interface: %s\n", "wlan0");
        printf("ESSID: %s\n", wc.essid);
    } else {
        fprintf(stderr, "WLAN Adapter nicht gefunden oder kein Zugriff\n");
        return 1;
    }
    iw_sockets_close(sock);
    return 0;
}

