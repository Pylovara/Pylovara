    echo "ğŸ” Suche nach *.$node_type Dateien..."
    find "$BASE_DIR" -type f -name "*.${node_type}" | while read -r node_file; do
        echo "ğŸ›  Setze ausfÃ¼hrbar: $node_file"
        chmod +x "$node_file"
    done
done

