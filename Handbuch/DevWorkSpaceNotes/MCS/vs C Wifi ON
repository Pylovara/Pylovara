wifi_on.c

#include <stdlib.h>
#include <stdio.h>

int main() {
    int status = system("nmcli radio wifi on");
    if (status != 0) {
        fprintf(stderr, "Fehler beim Aktivieren von WLAN\n");
        return 1;
    }
    return 0;
}
